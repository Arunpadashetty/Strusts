<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

<field name="employee.name">
<field-validator type="requiredstring">
<message>name is required</message>
</field-validator>
</field>

<field name="emloyee.age">
<field-validator type="int">
<param name="min">20</param>
<param name="max">70</param>
<message>Age should be between 20 and 70</message>
</field-validator>
</field>

<field name="employee.email">
<field-validator type="requiredstring">
<message>Email is required</message>
</field-validator>
</field>

<field name="employee.city">
<field-validator type="requiredstring">
<message>City is required</message>
</field-validator>
</field>

<field name="employee.salary">
<field-validator type="double">
<param name="minInclusive">500</param>
<message>Salary is greater then 500</message>
</field-validator>
</field>

</validators>